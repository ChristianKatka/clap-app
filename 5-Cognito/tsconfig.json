{
  "conpileOnSave": false,
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": false,
    "target": "es5",
    "sourceMap": true,
    "baseUrl": "./src",
    "module": "commonjs",
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "esModuleInterop": true,
    "paths": {
      "@models/*": [
        "../Shared/models/*"
      ]
    },
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ],
    "types": [
      "node",
      "aws-sdk"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test/**/*"
  ]
}