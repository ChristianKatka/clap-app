{
  "name": "image-upload-api",
  "version": "0.0.0",
  "config": {
    "region": "eu-west-1",
    "s3APIlambdaBucket": "images-api-lambda-bucket",
    "myCloudFormationStackName": "image-upload-api"
  },
  "scripts": {
    "start": "nodemon ./server/dev.ts",
    "prebuild": "rm -rf build && rm -rf dist && mkdir build && mkdir dist",
    "build": "tsc -p tsconfig.json && cp package.json build && cd build && npm install --production",
    "deleteobjectsins3": "aws s3 rm s3://$npm_package_config_s3APIlambdaBucket --recursive",
    "package": "aws cloudformation package --template-file sam/template.yaml --s3-bucket $npm_package_config_s3APIlambdaBucket --output-template dist/template-out.yaml --region $npm_package_config_region",
    "deploy": "aws cloudformation deploy --template-file dist/template-out.yaml --stack-name $npm_package_config_myCloudFormationStackName --capabilities CAPABILITY_IAM --region $npm_package_config_region",
    "package-deploy": "npm run package && npm run deploy",
    "build-package-deploy": "npm run build && npm run deleteobjectsins3 && npm run package && npm run deploy"
  },
  "private": true,
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "@types/jws": "^3.2.4",
    "@types/uuid": "^8.3.3",
    "aws-serverless-express": "^3.3.8",
    "jws": "^4.0.0",
    "koa": "^2.12.0",
    "koa-bodyparser": "^4.3.0",
    "koa-json": "^2.0.2",
    "koa-router": "^8.0.8",
    "nodemon": "^2.0.15",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/aws-serverless-express": "^3.3.3",
    "@types/koa": "^2.11.3",
    "@types/koa__cors": "^3.0.1",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-json": "^2.0.18",
    "@types/koa-router": "^7.4.1",
    "@types/node": "^14.0.5",
    "aws-sdk": "^2.656.0",
    "dotenv": "^8.2.0",
    "eslint": "^5.16.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.5.3"
  }
}
